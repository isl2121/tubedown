        style="@style/fileChooserName"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight" />

    <Button
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:text="파일 선택"
        android:id="@+id/file_path_btn"
        android:layout_gravity="center_horizontal" /> -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/main_black_button"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/file_path_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal">>

        <TextView
            style="@style/SmallTextView"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="와이파이만 사용"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifi_switch"
            android:checked="false"
            android:thumb="@drawable/icon_handle"
            android:track="@drawable/black_track_bg"
            android:switchMinWidth="57dp"
            android:textOff=""
            android:textOn=""
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/main_black_button"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/wifi_data_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/SmallTextView"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="데이터만 사용"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/data_switch"
            android:checked="false"
            android:thumb="@drawable/icon_handle"
            android:track="@drawable/black_track_bg"
            android:switchMinWidth="57dp"
            android:textOff=""
            android:textOn=""
            android:layout_gravity="center"></Switch>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/main_black_button"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/use_info_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/SmallTextView"
            android:id="@+id/textView16"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="와이파이 및 데이터 사용"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifi_data_switch"
            android:checked="true"
            android:thumb="@drawable/icon_handle"
            android:track="@drawable/black_track_bg"
            android:switchMinWidth="57dp"
            android:textOff=""
            android:textOn=""
            android:layout_gravity="center"></Switch>
    </LinearLayout>


</LinearLayout>
